<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ConfrimPasswordActivity">



    <ImageView
        android:id="@+id/confirm_image"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="50dp"
        android:layout_marginStart="55dp"
        android:src="@drawable/confrimpassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/forgetpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:text="Confirm Password"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/confirm_image"
        />

    <TextView
        android:id="@+id/otp"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="Enter a new password to update your password"
        android:textSize="18sp"
        android:textAlignment="center"
        android:layout_marginTop="25dp"
        android:layout_marginStart="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/forgetpassword"
        />

    <EditText
        android:id="@+id/password"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:hint="New Password"
        android:textSize="18sp"
        android:paddingStart="20dp"
        android:background="@drawable/bg"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toStartOf="@+id/otp"
        app:layout_constraintTop_toBottomOf="@+id/otp"
        />

    <EditText
        android:id="@+id/confirmpassword"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:hint="Confirm your password"
        android:textSize="18sp"
        android:paddingStart="20dp"
        android:background="@drawable/bg"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="@+id/password"
        app:layout_constraintTop_toBottomOf="@+id/password"
        />

    <Button
        android:id="@+id/Update"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="Update"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_margin="50dp"
        android:backgroundTint="#5B3BB8"
        android:layout_marginTop="25dp"
        android:background="@drawable/bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/confirmpassword"
        />

</androidx.constraintlayout.widget.ConstraintLayout>