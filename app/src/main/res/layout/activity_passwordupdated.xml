<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.PasswordUpdated">

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:gravity="center">

      <TextView
          android:id="@+id/updated"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Password Updated"
          android:textStyle="bold"
          android:textSize="30sp"
          android:textColor="@color/black"
          android:textAlignment="center"
          android:layout_marginStart="20dp"
         />

      <ImageView
          android:id="@+id/check"
          android:layout_width="60dp"
          android:layout_height="60dp"
          android:background="@drawable/circleshape"
          android:src="@drawable/check"
          android:backgroundTint="#5B3BB8"
          android:layout_marginTop="10dp"
          android:layout_marginStart="110dp"
          android:layout_below="@id/updated"/>

      <TextView
          android:id="@+id/update_message"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Your password has been updated!"
          android:textSize="20sp"
          android:layout_marginTop="10dp"
          android:layout_below="@+id/check"/>

      <Button
          android:id="@+id/Login"
          android:layout_width="250dp"
          android:layout_height="55dp"
          android:text="Login"
          android:textSize="22sp"
          android:textStyle="bold"
          android:textAlignment="center"
          android:backgroundTint="#5B3BB8"
          android:layout_marginTop="20dp"
          android:layout_marginStart="20dp"
          android:layout_below="@+id/update_message"/>

  </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>