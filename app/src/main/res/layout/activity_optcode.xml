<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.OPTCodeActivity">

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    <ImageView
        android:id="@+id/verification_image"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/verification"
        android:layout_marginTop="50dp"
        android:layout_marginStart="100dp"
        />

    <TextView
        android:id="@+id/forgetpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OTP Verification"
        android:layout_marginTop="20dp"
        android:layout_marginStart="100dp"
        android:textSize="28sp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/otp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please Enter the OTP code sent to you"
        android:textSize="18sp"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:layout_marginStart="50dp"
        />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/layout1"
        app:layout_constraintStart_toStartOf="parent">

        <EditText
            android:id="@+id/input1"
            android:layout_width="48dp"
            android:layout_height="50dp"
            android:layout_marginStart="40dp"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"
            android:inputType="number"
            android:maxLength="1"
            android:textStyle="bold"
            android:textSize="20sp"
            android:background="@drawable/rectangle"
            />

        <EditText
            android:id="@+id/input2"
            android:layout_width="48dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"
            android:inputType="number"
            android:maxLength="1"
            android:textStyle="bold"
            android:textSize="20sp"
            android:background="@drawable/rectangle"
            />

        <EditText
            android:id="@+id/input3"
            android:layout_width="48dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"
            android:inputType="number"
            android:maxLength="1"
            android:textStyle="bold"
            android:textSize="20sp"
            android:background="@drawable/rectangle"
            />

        <EditText
            android:id="@+id/input4"
            android:layout_width="48dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"
            android:inputType="number"
            android:maxLength="1"
            android:textStyle="bold"
            android:textSize="20sp"
            android:background="@drawable/rectangle"
            />

        <EditText
            android:id="@+id/input5"
            android:layout_width="48dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"
            android:inputType="number"
            android:maxLength="1"
            android:textStyle="bold"
            android:textSize="20sp"
            android:background="@drawable/rectangle"
            />

        <EditText
            android:id="@+id/input6"
            android:layout_width="48dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"
            android:inputType="number"
            android:maxLength="1"
            android:textStyle="bold"
            android:textSize="20sp"
            android:background="@drawable/rectangle"
            />

    </LinearLayout>

<LinearLayout
    android:id="@+id/layout3"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="20dp"
    android:gravity="center"
    app:layout_constraintTop_toBottomOf="@+id/layout2"
    app:layout_constraintStart_toStartOf="parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Didn't receive the code"
        android:textSize="18sp"
        android:textAlignment="center"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resend code again"
        android:layout_marginStart="8dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textAllCaps="true"
        android:textColor="@color/black"/>

</LinearLayout>


    <Button
        android:id="@+id/verify"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="Verify"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_margin="50dp"
        android:backgroundTint="#5B3BB8"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout3"
        />


</androidx.constraintlayout.widget.ConstraintLayout>